; -*-Lisp-*-

; Use with:
; (add-hook 'find-file-hooks
;           (lambda ()
;             (load (concat default-directory "emacs-local") t)))

(if
    (string-match "^\\(.*\\)/src/haven/\\([^/]*\\.java\\)$" (buffer-file-name (current-buffer)))
    (progn
      (make-local-variable 'compile-command)
      (setq compile-command (concat "ant -e -f " (match-string 1 (buffer-file-name)) "/build.xml"))
))
