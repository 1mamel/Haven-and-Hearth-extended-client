<?xml version="1.0" ?>

<project name="haven" default="jars">
  <path id="classpath">
    <pathelement path="lib/jogl.jar" />
    <pathelement path="lib/gluegen-rt.jar" />
  </path>

  <target name="build-env">
    <mkdir dir="build" />
    <mkdir dir="build/classes" />
    <mkdir dir="build/res" />
  </target>
  
  <target name="haven-client" depends="build-env">
    <javac srcdir="src" destdir="build/classes" debug="on">
      <classpath refid="classpath" />
      <!-- <compilerarg value="-Xbarda" /> -->
    </javac>
  </target>
  
  <target name="resources" depends="build-env">
    <copy todir="build/res">
      <fileset dir="res" />
    </copy>
  </target>

  <target name="appletview" depends="build-env">
    <copy file="etc/test.html" todir="build" />
  </target>

  <target name="jar" depends="haven-client, resources, appletview">
    <jar destfile="build/haven.jar">
      <fileset dir="build/classes" />
      <fileset dir="build" includes="res/**" />
      <manifest>
	<attribute name="Main-Class" value="haven.MainFrame" />
	<attribute name="Class-Path" value="jogl.jar gluegen-rt.jar" />
      </manifest>
    </jar>
    <signjar jar="build/haven.jar" alias="haven" storepass="autosign" keystore="etc/keys" />
  </target>
  
  <target name="jars" depends="build-env, jar">
    <copy todir="build">
      <fileset dir="lib" />
    </copy>
  </target>
</project>
