<?xml version="1.0" encoding="UTF-8"?>
<project name="irc-extended" default="all">
  
  
  <property file="irc-extended.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <include name="**/?*.properties"/>
    <include name="**/?*.xml"/>
    <include name="**/?*.gif"/>
    <include name="**/?*.png"/>
    <include name="**/?*.jpeg"/>
    <include name="**/?*.jpg"/>
    <include name="**/?*.html"/>
    <include name="**/?*.dtd"/>
    <include name="**/?*.tld"/>
    <include name="**/?*.ftl"/>
  </patternset>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/gluegen-rt.jar"/>
    <pathelement location="${basedir}/lib/jnlp.jar"/>
    <pathelement location="${basedir}/lib/jogg.jar"/>
    <pathelement location="${basedir}/lib/jogl.jar"/>
    <pathelement location="${basedir}/lib/jorbis.jar"/>
  </path>
  
  <!-- Modules -->
  
  
  <!-- Module IRC-Extended -->
  
  <dirname property="module.irc-extended.basedir" file="${ant.file}"/>
  
  
  
  <property name="compiler.args.irc-extended" value="${compiler.args}"/>
  
  <property name="irc-extended.output.dir" value="${module.irc-extended.basedir}/out/production/IRC-Extended"/>
  <property name="irc-extended.testoutput.dir" value="${module.irc-extended.basedir}/out/test/IRC-Extended"/>
  
  <path id="irc-extended.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="irc-extended.module.classpath">
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="irc-extended.runtime.module.classpath">
    <pathelement location="${irc-extended.output.dir}"/>
    <pathelement location="${irc-extended.testoutput.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.irc-extended">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.irc-extended">
    <patternset refid="excluded.from.module.irc-extended"/>
  </patternset>
  
  <path id="irc-extended.module.sourcepath">
    <dirset dir="${module.irc-extended.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.irc-extended" depends="compile.module.irc-extended.production,compile.module.irc-extended.tests" description="Compile module IRC-Extended"/>
  
  <target name="compile.module.irc-extended.production" description="Compile module IRC-Extended; production classes">
    <mkdir dir="${irc-extended.output.dir}"/>
    <javac destdir="${irc-extended.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true">
      <compilerarg line="${compiler.args.irc-extended}"/>
      <bootclasspath refid="irc-extended.module.bootclasspath"/>
      <classpath refid="irc-extended.module.classpath"/>
      <src refid="irc-extended.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.irc-extended"/>
    </javac>
    
    <copy todir="${irc-extended.output.dir}">
      <fileset dir="${module.irc-extended.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.irc-extended.tests" depends="compile.module.irc-extended.production" description="compile module IRC-Extended; test classes" unless="skip.tests"/>
  
  <target name="clean.module.irc-extended" description="cleanup module">
    <delete dir="${irc-extended.output.dir}"/>
    <delete dir="${irc-extended.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.irc-extended" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.irc-extended" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>